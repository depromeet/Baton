<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">
          <include layout="@layout/ticket_header" />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen256"
              android:background="?grey_scale30"
              android:gravity="center">

              <ImageView
                  android:id="@+id/ticket_detail_empty_iv"
                  android:layout_width="@dimen/dimen86"
                  android:layout_height="@dimen/dimen86"
                  android:src="@drawable/img_empty_health_86"
                  app:tint="?grey_scale60" />
          </RelativeLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/dimen16">

              <TextView
                  android:id="@+id/ticket_detail_gym_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="sample gym name"
                  android:textAppearance="?headline2"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent" />

              <TextView
                  android:id="@+id/ticket_detail_price_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dimen2"
                  android:text="10000원"
                  android:textAppearance="?display4"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/ticket_detail_gym_tv" />

              <TextView
                  android:id="@+id/ticket_detail_suggest_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?caption4"
                  android:textColor="?secondary50"
                  app:layout_constraintBottom_toBottomOf="@id/ticket_detail_price_tv"
                  app:layout_constraintStart_toEndOf="@id/ticket_detail_price_tv"
                  android:layout_marginLeft="@dimen/dimen8"
                  android:text="제안가능"
                  />

              <ImageButton
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_link_line_24"
                  android:background="@android:color/transparent"
                  app:layout_constraintStart_toEndOf="@id/ticket_detail_gym_tv"
                  app:layout_constraintTop_toTopOf="parent"
                  />
          </androidx.constraintlayout.widget.ConstraintLayout>
          <com.google.android.flexbox.FlexboxLayout
              android:layout_marginHorizontal="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:justifyContent="space_between"
              >
              <LinearLayout

                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_view_filled_16"
                      app:tint = "?grey_scale50"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?caption1"
                      android:text="275"/>

                  <ImageView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/ic_like_filled_16"
                      app:tint = "?grey_scale50"
                      android:layout_marginLeft="@dimen/dimen8"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?caption1"
                      android:text="275"/>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?caption4"
                      android:textColor="?grey_scale60"
                      android:text="판매 등록일"/>
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textAppearance="?caption4"
                      android:textColor="?grey_scale60"
                      android:text="2022"/>

              </LinearLayout>
          </com.google.android.flexbox.FlexboxLayout>
      <GridLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/dimen16"
          android:padding="@dimen/dimen16"
          android:background="@drawable/ticket_detail_background"
          android:columnCount="2"
          android:rowCount="6"
          android:useDefaultMargins="true"
          >
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="판매 종류"
              android:textColor="?grey_scale60"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="헬스 회원권"
              android:textColor="?grey_scale80"
              android:layout_marginLeft="@dimen/dimen12"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="남은 기간"
              android:textColor="?grey_scale60"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="60일"
              android:textColor="?grey_scale80"
              android:layout_marginLeft="@dimen/dimen12"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="2"
              android:textAppearance="?caption1"
              android:text="판매가"
              android:textColor="?grey_scale60"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="20000"
              android:textColor="?grey_scale80"
              android:layout_marginLeft="@dimen/dimen12"
              />

          <LinearLayout
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              >
              <TextView
                  android:layout_width="@dimen/dimen18"
                  android:layout_height="@dimen/dimen18"
                  android:textAppearance="?caption3"
                  android:textColor="?grey_scale70"
                  android:text="월"
                  android:background="@drawable/background_radius_4dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginRight="@dimen/dimen4"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?caption3"
                  android:text="10000원"
                  />

              >
              <TextView
                  android:layout_width="@dimen/dimen18"
                  android:layout_height="@dimen/dimen18"
                  android:textAppearance="?caption3"
                  android:textColor="?grey_scale70"
                  android:text="일"
                  android:background="@drawable/background_radius_4dp"
                  android:textAlignment="center"
                  android:gravity="center"
                  android:layout_marginRight="@dimen/dimen4"
                  android:layout_marginLeft="@dimen/dimen8"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textAppearance="?caption3"
                  android:text="10000원"
                  />

          </LinearLayout>
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="양도비"
              android:textColor="?grey_scale60"
              />


          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="판매자 부담"
              android:textColor="?grey_scale80"
              android:layout_marginLeft="@dimen/dimen12"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="판매 종류"
              android:textColor="?grey_scale60"
              />
          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="헬스 회원권"
              android:textColor="?grey_scale80"
              android:layout_marginLeft="@dimen/dimen12"
              />

          <TextView
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              android:textAppearance="?caption1"
              android:text="회원권 정보"
              android:textColor="?grey_scale60"
              />

          <com.google.android.flexbox.FlexboxLayout
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:layout_columnSpan="1"
              android:layout_rowSpan="1"
              app:flexWrap="wrap"
              app:justifyContent="flex_start"
              app:alignContent="center"
              >

              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                  app:bds_text="샤워실 포함" />

              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                  app:bds_text="샤워실 포함" />

              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                  app:bds_text="샤워실 포함" />

              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                  app:bds_text="샤워실 포함" />


              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  app:bds_text="샤워실 포함"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                 />
              <com.depromeet.bds.component.BdsTag
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="@dimen/dimen4"
                  app:bds_text="샤워실 포함"
                  android:theme="@style/Theme.Bds.Tag.Default.Primary.Medium"
                  />


          </com.google.android.flexbox.FlexboxLayout>
      </GridLayout>
       <View
           android:layout_width="match_parent"
           android:layout_height="@dimen/dimen12"
           android:background="?grey_scale30"
           />
       <TextView
           android:layout_marginHorizontal="@dimen/dimen16"
           android:layout_marginTop="@dimen/dimen24"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textAppearance="?headline2"
           android:textColor="?grey_scale90"
           android:text="설명"
           />
          <TextView
              android:layout_margin="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?body4"
              android:text="설명 디프만_6조-바통 디프만_6조-바통디프만_6조-바통디프만_6조-바통"
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?grey_scale40"
              />
          <TextView
              android:layout_marginHorizontal="@dimen/dimen16"
              android:layout_marginTop="@dimen/dimen24"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?headline2"
              android:textColor="?grey_scale90"
              android:text="거래방법"
              />
          <TextView
              android:layout_margin="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?body4"
              android:text="현장결제/선결제 둘다 가능"
              />

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?grey_scale40"
              />

          <TextView
              android:layout_marginHorizontal="@dimen/dimen16"
              android:layout_marginTop="@dimen/dimen24"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?headline2"
              android:textColor="?grey_scale90"
              android:text="헬스장 위치"
              />
          <com.naver.maps.map.MapView
              android:layout_marginHorizontal="@dimen/dimen16"
              android:layout_marginTop="@dimen/dimen8"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen152"/>

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/dimen16">

              <ImageView
                  android:id="@+id/ticket_locatoin_iv"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:src="@drawable/ic_location_line_24"
                  app:tint = "?grey_scale70"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  />

              <TextView
                  android:id="@+id/ticket_detail_location_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="sample gym name"
                  android:textAppearance="?headline2"
                  app:layout_constraintStart_toEndOf="@id/ticket_locatoin_iv"
                  app:layout_constraintTop_toTopOf="parent" />

              <TextView
                  android:layout_marginTop="@dimen/dimen2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="현재 위치에서 100m 떨어짐"
                  android:textAppearance="?caption3"
                  android:textColor="?grey_scale60"
                  app:layout_constraintStart_toStartOf="@id/ticket_detail_location_tv"
                  app:layout_constraintTop_toBottomOf="@id/ticket_detail_location_tv" />

              <ImageButton
                  android:id="@+id/ticket_detail_copy_btn"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/ic_copy_line_16"
                  android:background="@android:color/transparent"
                  app:tint="?secondary50"
                  android:layout_marginStart="@dimen/dimen4"
                  app:layout_constraintStart_toEndOf="@id/ticket_detail_location_tv"
                  app:layout_constraintTop_toTopOf="parent"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toEndOf="@id/ticket_detail_copy_btn"
                  android:textAppearance="?caption3"
                  android:textColor="?secondary50"
                  android:text="복사"

                  />
          </androidx.constraintlayout.widget.ConstraintLayout>
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?grey_scale40"
              android:layout_marginVertical="@dimen/dimen16"
              />
          <TextView
              android:layout_margin="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?headline3"
              android:textColor="?grey_scale90"
              android:text="헬스장 추가 정보"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="?grey_scale40"
              android:layout_marginVertical="@dimen/dimen16"
              />
          <TextView
              android:layout_margin="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textAppearance="?headline3"
              android:textColor="?grey_scale90"
              android:text="판매자"
              />

          <androidx.constraintlayout.widget.ConstraintLayout
              android:paddingHorizontal ="@dimen/dimen16"
              android:layout_width="match_parent"
              android:layout_height="@dimen/dimen40">

              <ImageView
                  android:id="@+id/ticket_detail_profile_iv"
                  android:layout_width="@dimen/dimen40"
                  android:layout_height="@dimen/dimen40"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:src="@drawable/empty_profile"
                  android:scaleType="centerCrop"
                  />
              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toEndOf="@id/ticket_detail_profile_iv"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  android:textAppearance="?body3"
                  android:text="닉네임"
                  android:layout_marginStart="@dimen/dimen10"
                  />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:text="가입날자자"
                 />
          </androidx.constraintlayout.widget.ConstraintLayout>

      </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</layout>
