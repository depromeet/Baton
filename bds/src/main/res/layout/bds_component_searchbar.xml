<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen48"
    android:background="@drawable/bds_searchbar_background"
    android:paddingHorizontal="@dimen/dimen16">


    <ImageView
        android:id="@+id/search_bar_search_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_line_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tint="?grey_scale70" />


    <EditText
        android:id="@+id/search_bar_et"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen8"
        android:background="@android:color/transparent"
        android:singleLine="true"
        android:lineHeight="@dimen/dimen20"
        android:text="텍스트 입력중"
        android:textAppearance="?body4"
        android:textColor="@color/selector_bds_searchbar_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_bar_search_ic"
        app:layout_constraintEnd_toStartOf="@id/search_bar_cancel_ic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/dimen8"
        android:inputType="textMultiLine|textNoSuggestions"
        />

    <!--TODO : android:textColorHighlight  -->
    <!--TODO : android:textCursorDrawable  변경  -->

    <ImageView
        android:id="@+id/search_bar_cancel_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel_filled_20"
        app:tint="?grey_scale60"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>